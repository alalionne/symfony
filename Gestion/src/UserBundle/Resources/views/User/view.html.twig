{% extends "GestionBundle::layout.html.twig" %}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}

{% block body %}
<h3><span class="glyphicon glyphicon-user"></span> {{ entity.nom|title }} {{ entity.prenom|title }} </h3>

<div class="row">
	<div class="col-md-12">
    <div class="box">
      <header>
          <h4><span class="glyphicon glyphicon-file"></span> Utilisateur</h4>
      </header>
        <ul class="list-group">
          <li class="list-group-item"><strong>Nom :</strong> {{ entity.nom }}</li>
          <li class="list-group-item"><strong>Prénom :</strong>  {{ entity.prenom }} </li>
          <li class="list-group-item"><strong>Téléphone :</strong> {{ entity.tel }}</li>
          <li class="list-group-item"><strong>Ajouté le :</strong> {% if entity.created %}{{ entity.created|date('d/m/Y') }}{% endif %}</li>
        </ul>
    </div>
	</div>
</div>

{% endblock body %}

