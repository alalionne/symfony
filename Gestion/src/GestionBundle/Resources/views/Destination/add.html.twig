{% extends "GestionBundle::layout.html.twig" %}

{% block title %}
	Destination add | {{ parent() }}
{% endblock %}

{% block body %}
	<h3><span class="glyphicon glyphicon-pencil"></span> Ajouter Destinataire</h3>
	{{ form_start(form, {'attr': {'class': 'form-horizontal col-md-8'}}) }}
	    {% include "GestionBundle:Destination:form.html.twig" %}
	    <div class="form-group">
	      <div class="col-md-offset-5 col-md-7">
	        <button type="submit" name="subvalider" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Ajouter</button>
	        <a href="{{ path('destination_index') }}" class="btn btn-success"><span class="glyphicon glyphicon-chevron-left"></span> Retourner vers la liste</a>
	      </div>
	    </div>
	{{ form_end(form) }}
{% endblock body %}

