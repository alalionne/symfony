<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="application-name" content="doctors"/>
    <meta name="author" content="benaich.med@gmail.com">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    {% block meta %}{% endblock %}
    {% block stylesheet %}
        <link href="{{ asset('bootstrap/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('css/layout.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
        <link href="{{ asset('css/select2.css') }}" rel="stylesheet">
        <link href="{{ asset('font-awesome/css/font-awesome.css') }}" rel="stylesheet">
    {% endblock %}
    <title>{% block title %}{% endblock %}</title>
    <link rel="shortcut icon" type="image/x-icon" href="" />
    <style></style>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
    <![endif]-->
</head>

{% block container %}
<body class="theme1">
    {% include "GestionBundle:Default:menu.html.twig" %}

    <div class="visible-print col-md-12 text-left"><img src="" alt="logo" /></div>
    <section class="wrap">
        <header id="adminbar">
            <div id="logo"><img src="{{asset('images/medocs.jpg')}}" alt="logo" class="img-small" /> <span>G. Médocs<span></div>

                <div class="dropdown pull-right user-profile">
                  <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown">
				  {% if app.user.image is not null %}
                  <img class="img-small" src="{{ asset(app.user.image.getWebPath)}}" alt="{{ app.user.username }}">
				  {% else %}
				  <img class="img-small" src="{{ asset('uploads/img/anonymous.png')}}" alt="">
				  {% endif %}
                 {%if app.user.nom is not null %} {{ app.user.nom }}-{{ app.user.prenom }}{%else%}{{ app.user.username }}{%endif%}<span class="glyphicon glyphicon-chevron-down"></span></a>


                    <ul class="dropdown-menu">
                        <li>
                            <div class="navbar-content">
                                <div class="row">
                                    <div class="col-md-5">
									{% if app.user.image is not null %}
                                        <img src="{{ asset(app.user.image.getWebPath)}}" alt="Alternate Text" class="img-responsive" />
									{% else %}
										<img class="img-responsive" src="{{ asset('uploads/img/anonymous.png')}}" alt="">
									{% endif %}
                                        <div class="clearfix"></div>
                                        <p></p>
                                    </div>
                                    <div class="col-md-7">
                                        <span>{{ app.user.username }}</span>
                                        <p class="text-muted small">{{ app.user.email }}</p>
                                        <div class="divider"></div>
                                        <a href="{{ path('user_profile_edit') }}" class="btn btn-primary btn-sm">Afficher mon profil</a>
                                    </div>
                                </div>
                            </div>
                            <div class="navbar-footer">
                                <div class="navbar-footer-content">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <a href="{{ path('user_profile_update') }}" class="btn btn-default btn-sm">Modifier profil</a>
                                        </div>
                                        <div class="col-md-6">
                                            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-sm pull-right">Déconnexion</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
        </header>

        <div class="container">
            {% include "GestionBundle:Default:flashes.html.twig" %}
            {% block breadcrumb %} {% endblock %}
            {% block body %}{% endblock %}
        </div>
    </section>

    {% block javascripts %}
 
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script> 
    <script src="{{ asset('js/jquery.cookie.js') }}"></script>
    <script src="{{ asset('js/select2.min.js') }}"></script>
    <script src="{{ asset('js/application.js') }}"></script>
    {% endblock javascripts %}
</body>
{% endblock container %}
</html>
