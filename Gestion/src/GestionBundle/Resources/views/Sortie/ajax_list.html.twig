{% for entity in entities %}
    <tr>
        <td>{{ loop.index }}</td>
        <td>{{ entity.code }}</td>
        <td>{{ entity.produit.dci }}</td>
        <td>{{ entity.dosage }}</td>
        <td>{{ entity.conditionnement }}</td>
        <td>{{ entity.quantite }}</td>
        <td>{{ entity.prix }}</td>
        <td>{{ entity.valeur }}</td>
        <td>{{ entity.destination.nom }}</td>
        <td>{{ entity.dateSortie|date('d-m-Y') }}</td>
        <td class="hidden-print">
            <div class="text-center">
                <a class="btn btn-info btn-xs"  data-toggle="tooltip" data-placement="top" title="afficher" href="{{ path('sortie_view', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
                <a class="btn btn-primary btn-xs"  data-toggle="tooltip" data-placement="top" title="modifier" href="{{ path('sortie_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>

                <a class="btn btn-danger btn-xs"  data-toggle="tooltip" data-placement="top" title="modifier" href="{{ path('sortie_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-trash"></span></a>
            </div>
        </td>
    </tr>
{% else %}
    <tr class="mypagination">            
        <td colspan="10">
            <div id="msgbox" class="alert alert-danger fade in" role="alert"> 
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>info !</strong> aucun résultat ne correspond à vos critères
            </div>
        </td>
    </tr>
{% endfor %}
{% include "GestionBundle:Default:pagination.html.twig" %}

<script>   
(function($) {

    /* tooltip */
    $('a[data-toggle="tooltip"]').tooltip();

})(jQuery);
</script>