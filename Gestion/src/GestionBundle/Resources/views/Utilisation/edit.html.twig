{% extends "GestionBundle::layout.html.twig" %}

{% block title %}
    Utilisation  | {{ parent() }}
{% endblock %}

{% block body %}
    <h3><span class="glyphicon glyphicon-edit"></span> Modifier utilisation</h3>
    {{ form_start(form, {'attr': {'class': 'form-horizontal col-md-8'}}) }}
        {% include "GestionBundle:Categorie:form.html.twig" %}
        <div class="form-group">
          <div class="col-md-offset-5 col-md-7">
            <button type="submit" name="subvalider" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Modifier</button>
            <a href="{{ path('utilisation_delete', {'id': entity.id}) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
            <a href="{{ path('utilisation_index') }}" class="btn btn-success"><span class="glyphicon glyphicon-chevron-left"></span> Retourner vers la liste</a>
          </div>
        </div>
    {{ form_end(form) }}
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}