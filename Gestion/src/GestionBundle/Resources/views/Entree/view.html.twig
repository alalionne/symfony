{% extends "GestionBundle::layout.html.twig"%}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}
{% block body -%}
<h3><span class="glyphicon glyphicon-eye-open"></span> Voir Entrée</h3>
<div id="mycontainer" class="row">
    <div class="col-md-9">    
                <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>

                        <tr>
                            <th>Code </th>
                            <td>{{ entity.code }}</td>
                        </tr>

                         <tr>
                            <th>Dci </th>
                            <td>{{ entity.produit.dci }}</td>
                        </tr>
                        
                        <tr>
                            <th>Dosage </th>
                            <td>{{ entity.dosage }}</td>
                        </tr>

                         <tr>
                            <th>Conditionnement </th>
                            <td>{{ entity.conditionnement }}</td>
                        </tr>

                        <tr>
                            <th>Quantite </th>
                            <td>{{ entity.quantite }}</td>
                        </tr>
                        
                        <tr>
                            <th>Utilisation </th>
                            <td>{{ entity.utilisation.nom }}</td>
                        </tr>

                        <tr>
                            <th>Date d'entrée </th>
                            <td>{{ entity.dateEntree|date('d-m-Y') }}</td>
                        </tr>

                        <tr>
                            <th>Date de peremption </th>
                            <td>{{ entity.datePeremption|date('d-m-Y') }}</td>
                        </tr>

                        <tr>
                            <th>Annee </th>
                            <td>{{ entity.annee|date('Y') }}</td>
                        </tr>
                    </tbody>
                </table>
    </div>
        <div class="col-md-3">
                    
            <a class="btn btn-embossed btn-info btn-block" href="{{ path('entree_edit', { 'id': entity.id }) }}"><span class="fui-new">Editer</span></a>

            <a class="btn btn-embossed btn-danger btn-block" href="{{ path('entree_delete', { 'id': entity.id }) }}">Supprimer</a>

            <a class="btn btn-embossed btn-primary btn-block" href="{{ path('entree_index', { 'id': entity.id }) }}"><span class="fui-new">Retour</span></a>
        </div>
</div>
{% endblock %}