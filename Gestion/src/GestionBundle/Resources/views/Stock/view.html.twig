{% extends "GestionBundle::layout.html.twig"%}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}
{% block body -%}
<h3><span class="glyphicon glyphicon-eye-open"></span> Voir Stock</h3>
<div id="mycontainer" class="row">
    <div class="col-md-9">    
                <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>

                        <tr>
                            <th>Code </th>
                            <td>{{ entity.code }}</td>
                        </tr>

                         <tr>
                            <th>Dci </th>
                            <td>{{ entity.dci }}</td>
                        </tr>

                        <tr>
                            <th>Quantite </th>
                            <td>{{ entity.quantite }}</td>
                        </tr>

                        <tr>
                            <th>Date de peremption </th>
                            <td>{{ entity.datePeremption|date('d-m-Y') }}</td>
                        </tr>
                    </tbody>
                </table>
    </div>
        <div class="col-md-3">
        </div>
</div>
{% endblock %}